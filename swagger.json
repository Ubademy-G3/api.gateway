                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "token",
                        "in": "query",
                        "required": true,
                        "type": "string",
                        "description": "The token to verify"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Authorized",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
